@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}



<div class="card bg-light">
    <div class="card-body">
        <h3>Rol Atama</h3>
        <hr />
        <form method="post">

            @for (int i=0;i<Model.Count();i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId"/>
                    <input type="hidden" asp-for="@Model[i].RoleName"/>
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].RoleExist"/>
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                </div>
            }
            <button class="btn btn-primary">Rol Ata</button>
        </form>
    </div>
</div>
